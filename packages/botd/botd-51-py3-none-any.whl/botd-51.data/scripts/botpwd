#!python
# This file is placed in the Public Domain.

import base64
import os
import sys

from trm import Runtime, wrap

k = Runtime()

def main():
    k.parse_cli()
    if len(k.cfg.args) != 1:
        print("botpwd <nick> <password>")
        return
    m = "\x00%s\x00%s" % (k.cfg.cmd, k.cfg.args[0])
    mb = m.encode('ascii')
    bb = base64.b64encode(mb)
    bm = bb.decode('ascii')
    print(bm)

wrap(main)
