{
    "dbname": {
        "required": true,
        "type": "string",
        "minlength": 1,
        "maxlength": 64,
        "regex": "[a-zA-Z][a-zA-Z0-9_-]*",
        "default": "postgres",
        "meta": {
            "description": "The name of the database."
        }
    },
   "host": {
        "type": "string",
        "default": "localhost",
        "regex": "(^(([a-zA-Z0-9]|[a-zA-Z0-9][a-zA-Z0-9-]*[a-zA-Z0-9])\\.)*([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9-]*[A-Za-z0-9])$|^(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])$)",
        "meta":{
            "description": "A valid RFC952 hostname or IP address."
        }
    },
    "user": {
        "type": "string",
        "default": "postgres"
    },
    "password": {
        "type": "string",
        "default": "postgres"
    },
    "port": {
        "type": "integer",
        "default": 5432,
        "min": 1024, "max": 65535
    },
    "maintenance_db": {
        "type": "string",
        "default": "postgres"
    },
    "retries": {
        "type": "integer",
        "default": 0,
        "min": 0,
        "max": 2147483647
    }
}