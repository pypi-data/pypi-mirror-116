
# These are the default settings for spartan, which are initialized when
# spartan is instantiated. The user can change the values; for example,
# the user can change the context (notebook, poster, talks, paper).


################################
## figure ##
############

figure.dpi: 100
figure.figsize: 8, 4.9443


################################
## fonts and text ##
####################

font.sans-serif: Arial
font.size: 14.0
mathtext.fontset : cm
text.hinting_factor : 8


################################
# lines and color #
###################

lines.linewidth: 2.2
lines.markersize: 8
# default is base8
axes.prop_cycle: cycler('color',  ['18453a', 'cc5a29', '004654' ,'bc2e3f', '004372', '9c0252', '23347c', '6e005f'])


################################
# patches #
###########

patch.linewidth: 0.3
patch.facecolor: green
patch.edgecolor: eeeeee
patch.antialiased: True


################################
# axes #
########

axes.spines.right : False
axes.spines.top : False
axes.spines.bottom : False
axes.spines.left : False
axes.titlesize: 20
axes.labelsize: 16
xtick.direction: in
ytick.direction: in
xtick.labelsize : 10
ytick.labelsize : 10
xtick.color: 555555
ytick.color: 555555
xtick.bottom: False
ytick.left: False

################################
## grids ##
###########

axes.grid : True
axes.grid.axis: both
grid.color: e8e8e8
grid.linestyle: -
grid.linewidth: .6
grid.alpha: 0.7


################################
## legend ##
############

legend.fancybox: True
legend.framealpha: 0.6
legend.fontsize: 10
